{
  "name": "@spanion/react-hooks",
  "version": "0.0.10",
  "description": "Collection of reusable react hooks used regularly.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "jest",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "jest": {
    "preset": "@repo/jest-presets/browser"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/jest-presets": "*",
    "@repo/typescript-config": "*",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.62",
    "@types/react-dom": "^18.2.19",
    "jest": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.2",
    "typescript": "5.3.3"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "clean-package": {
    "remove": [
      "jest",
      "scripts",
      "exports",
      "devDependencies"
    ]
  }
}