{
  "name": "@spanion/utils",
  "version": "0.0.11",
  "description": "Collection of reusable utilities used regularly.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "tsc": "tsc",
    "format": "prettier --write .",
    "dev": "rimraf lib && tsup --watch",
    "build": "rimraf dist && env NODE_ENV=production tsup",
    "lint": "eslint src/",
    "build:watch": "tsup --watch",
    "test": "jest",
    "docs": "typedoc",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "jest": {
    "preset": "@repo/jest-presets/browser"
  },
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "typescript": "5.3.3"
  },
  "clean-package": {
    "remove": [
      "jest",
      "scripts",
      "exports",
      "devDependencies"
    ]
  }
}