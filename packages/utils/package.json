{
  "name": "@spanion/utils",
  "version": "0.0.13",
  "description": "Collection of reusable utilities used regularly.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "tsc": "tsc",
    "format": "prettier --write .",
    "dev": "rimraf lib && tsup --watch",
    "build": "rimraf dist && env NODE_ENV=production tsup",
    "clean": "rm -rf dist && rm -rf test-report && rm -rf docs",
    "lint": "eslint src/",
    "build:watch": "tsup --watch",
    "test": "jest",
    "report": "jest --coverage",
    "docs": "typedoc",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "jest": {
    "preset": "@repo/jest-presets/browser",
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "urlForTestFiles": "https://github.com/AKAspanion/utils/blob/main/packages/utils",
          "pageTitle": "@spanion/utils",
          "publicPath": "./test-report",
          "filename": "index.html",
          "openReport": false,
          "darkTheme": true,
          "hideIcon": true,
          "expand": false
        }
      ]
    ]
  },
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "typescript": "5.3.3"
  },
  "clean-package": {
    "remove": [
      "jest",
      "scripts",
      "exports",
      "devDependencies"
    ]
  }
}